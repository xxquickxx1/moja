<div class="home-container">
<div class="row-fluid">

<div class="span12 white padding-20">
<span class="pull-left"><h5>Hi <%= current_user.name %></h5></span>
<span class="pull-right"><h5><%= link_to 'Inbox', inbox_path, :class => if current_user.messages.empty? then 'muted' else '' end %>

<% if current_user.messages.size > 0 %>
<span class="badge badge-success"><%= current_user.messages.count %></span>

<% end %>
</h5></span>
<br />  
<hr />

<div class="row-fluid">
<div class="span6 well"><h4>Your Websites</h4>
<% if @usersites.size == 0 %>
<strong>You have no websites yet</strong>
<% end %>
<% @usersites.each do |site| %>

<p>www.<%= site.website_link %></p>

<% end %>

<span class="pull-right"><%= link_to 'Add Website', addwebsite_path, class: 'button-link-green' %></span>
</div>

<div class="span6 well"><h4>Refer Friend</h4>
<form class="form-inline">
<input type="text" placeholder="Your friend's email address">
<input type="submit" class="btn btn-success">
</form>

<%= current_user.invitations.count %>
<%= current_user.invitations %>
</div>
</div>

<div class="row-fluid">
<div class="span6 well"><h4>Quick Question</h4>
<%= simple_form_for @quick_question do |t| %>
 <%= t.error_notification %>
<%= t.input :subject, placeholder: 'Minimum 10 letters' %>
<%= t.input :description, :input_html => {rows: 3}, placeholder: 'Minimum 20 letters' %>
<%= t.input :user_id, :as => :hidden, :input_html => {value: "hello"} %>
<span class="pull-right"><%= button_to 'Ask Question', nil, class: 'button-link-green' %></span>

<% end %>
</div>

<div class="span6 well"><h4>Check SEO price for your website</h4></div>
</div>


</div>
</div>
</div>


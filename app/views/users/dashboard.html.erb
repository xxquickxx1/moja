<div class="home-container">
<div class="row-fluid">

<div class="span12 white padding-20">
<span class="pull-left"><h5>Hi <%= current_user.name %></h5></span>
<span class="pull-right"><h5><%= link_to 'Inbox', inbox_path, :class => if current_user.messages.empty? then 'muted' else '' end %>

<% if current_user.messages.size > 0 %>
<span class="badge badge-success"><%= current_user.messages.count %></span>

<% end %>
</h5></span>
<br />  
<hr />

<div class="row-fluid">
<div class="span6 well"><h4>Your Websites</h4>
<% if @usersites.size == 0 %>
<strong>You have no websites yet</strong>
<% end %>
<% @usersites.each do |site| %>

<span class="pull-left">www.<%= site.website_link %></span><span class="pull-right">
<%= link_to 'Remove',{:controller => :users, action: 'deleteaddwebsite', website_id: site.id}, {class: 'btn btn-danger btn-small'}%></span>
<br />
<hr />

<% end %>

<span class="pull-right"><%= link_to 'Add Website', addwebsite_path, class: 'button-link-green' %></span>
</div>

<div class="span6">

<span class="pull-right">
<h1 style="margin-top:-20px;"><small>My Account</small></h1>
<ul class="unstyled">

<li><%= link_to 'Refer Friend', new_user_invitation_path %></li>
<li><%= link_to 'Edit My Details', edit_user_registration_path %></li>
<li><%= link_to 'Sign Out', destroy_user_session_path %></li>

</ul>	

</span>

</div>
<div class="span6">
	<hr />

<div class="invited">
<progress id="progressbar" value="<%= @invitationsCount %>" max="10">
</progress> <span class="invitedCount pull-right"><%= @invitationsCount %>/5</span> 
<br />
 <p class="muted">Number of people who accepted your invitation.</p>
 <span class="pull-right">You have <%= @invitationsPoints %> points.</span>
 <br />
</div>

	<hr />
	<h5>Quick Tips</h5>
	<p>Is your website responsive?</p>
</div>
</div>

<div class="row-fluid">
<div class="span6 well"><h4>Quick Question</h4>
<%= simple_form_for @quick_question do |t| %>
 <%= t.error_notification %>
<%= t.input :subject, placeholder: 'Minimum 10 letters' %>
<%= t.input :description, :input_html => {rows: 3}, placeholder: 'Minimum 20 letters' %>
<%= t.input :user_id, :as => :hidden, :input_html => {value: "hello"} %>
<span class="pull-right"><%= button_to 'Ask Question', nil, class: 'button-link-green' %></span>

<% end %>
</div>

</div>


</div>
</div>
</div>

